<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/preview"
    tools:context="com.asdtechlabs.whatshack.Splash">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/whatsstatus_saver"
        android:textColor="#000000"
        android:textSize="32sp"
        android:fontFamily="@font/latoheavy"/>

    <Button
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Open"
        android:textSize="25sp"
        android:background="@drawable/gradient"
        android:textColor="#ffffff"
        android:fontFamily="@font/gilroy"
        android:textAllCaps="true"
        android:onClick="playApp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/margin"
        android:text="@string/more_apps"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:fontFamily="@font/lato"
        android:textSize="20sp"
        />
    <RelativeLayout
        android:id="@+id/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="87dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/card_view"
        android:padding="1dp"
        android:background="#acacac"
        />
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_logo"
        card_view:cardCornerRadius="4dp"
        android:background="#000000"
        android:layout_margin="5dp"
        card_view:cardPreventCornerOverlap="false"
        android:onClick="gotoAPP"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/moreapps"/>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>

